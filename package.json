{
  "name": "claude-adapter",
  "version": "1.1.0",
  "description": "Proxy to convert Anthropic API requests to OpenAI format for Claude Code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-adapter": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "npx ts-node src/cli.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "claude",
    "claude-code-adapter",
    "openai-to-claude",
    "openai",
    "anthropic",
    "proxy",
    "claude-adapter",
    "api",
    "claude-code",
    "llm",
    "ai",
    "chatgpt"
  ],
  "author": {
    "name": "Shanto Islam",
    "email": "shantoislamdev@gmail.com",
    "url": "https://shantoislamdev.web.app/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shantoislamdev/claude-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/shantoislamdev/claude-adapter/issues"
  },
  "homepage": "https://github.com/shantoislamdev/claude-adapter#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "0.71.2",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fastify": "^5.1.0",
    "inquirer": "^8.2.6",
    "openai": "4.76.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}